{{ ansible_managed | comment }}
# Generated by Ansible role {{ ansible_role_name }}

# BIND MASTER CONFIG FILE
# include "/etc/named.rfc1912.zones";
# include "/etc/named.root.key";
include "/etc/bind/rndc.key";
include "/etc/bind/ddns.key";

# Allow rndc management
controls {
	inet 127.0.0.1 port 953 allow { 127.0.0.1; } keys { "rndc-key"; };
};

statistics-channels {
	inet 127.0.0.1 port {{ bind_statistics_port }} allow { 127.0.0.1; };
};

# Limit access to local network and homelab LAN
acl "clients" {
	127.0.0.0/8;
	172.31.0.0/16;
};

options {
	listen-on port 53 { 127.0.0.1; {{ ansible_default_ipv4.address }}; }; ## MASTER
	listen-on-v6 { none; };
	directory 	"/var/cache/bind";
	dump-file 	"/var/cache/bind/data/cache_dump.db";
	statistics-file "/var/cache/bind/data/named_stats.txt";
	memstatistics-file "/var/cache/bind/data/named_mem_stats.txt";
	secroots-file	 "/var/cache/bind/data/named.secroots";
	recursing-file	 "/var/cache/bind/data/named.recursing";
	{% if bind_forwarders|length > 0 %}forwarders { {{ bind_forwarders|join('; ') }}; };{% endif %}

	tcp-clients 50;

	# Disable built-in server information zones
	version none;
	hostname none;
	server-id none;

	recursion yes;
	recursive-clients 50;
	allow-recursion { clients; };
	allow-query { clients; };
	allow-transfer { localhost; {{ dns_secondary_server }}; }; ## Secondary

	auth-nxdomain no;
	notify no;

	dnssec-validation yes;

	bindkeys-file "/etc/named.iscdlv.key";
	managed-keys-directory "/var/cache/bind/";

	pid-file "/run/named/named.pid";
	session-keyfile "/run/named/session.key";

	/* https://fedoraproject.org/wiki/Changes/CryptoPolicy */
	# include "/etc/crypto-policies/back-ends/bind.config";
};

# Specifications of what to log, and where the log messages are sent
logging {
	channel "common_log" {
		file "{{ bind_log_file }}" versions 10 size 5m;
		severity dynamic;
		print-category yes;
		print-severity yes;
		print-time yes;
	};
	category default { "common_log"; };
	category general { "common_log"; };
	# category queries { "common_log"; };
	category queries { null; };
	category client { "common_log"; };
	category security { "common_log"; };
	category query-errors { "common_log"; };
	category lame-servers { null; };
};


# Internal zone definitions
zone "{{ dns_zone }}" {
	type master;
	file "db.{{ dns_zone }}";
	allow-update { key rndc-key; };
	notify yes;
	zone-statistics yes;	
};

# Internal k3s cluster zone
zone "{{ dns_ironmaiden_zone }}" {
	type master;
	file "db.{{ dns_ironmaiden_zone }}";
	allow-update { key externaldns; key rndc-key; };
	notify yes;
	zone-statistics yes;	
};

zone "{{ dns_reverse_zone }}.in-addr.arpa" {
	type master;
	file "db.{{ dns_reverse_zone }}";
	allow-update { key rndc-key; key externaldns; };
	notify yes;
	zone-statistics yes;	
};
